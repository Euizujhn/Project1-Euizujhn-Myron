package bsu.edu.cs;

import org.json.simple.JSONArray;
import org.json.simple.JSONObject;

import java.util.ArrayList;
import java.util.Scanner;

//FOR ITERATION  1
public class Wikipedia_Format extends Wikipedia_Reader{
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        System.out.println("Enter a Wiki Page");
        String Page = input.nextLine();
        System.out.println("User, Date, & Time");
        System.out.println("====================");
        Changers(Page);
    }

    //Shows Wikipedia Editors
    public static String Changers(String PageKey){
        try {
            JSONArray Change = getRecentChange(PageKey);
            for (int i = 0; i <= 3; i++){
                int order = i + 1;
                JSONObject UserList = (JSONObject) Change.get(i);
                System.out.println(order + "." + UserList.get("user") + ": " + UserList.get("timestamp"));
                System.out.println();
            }

        }  catch (Exception e) {
            String empty = "Wikipedia Page was not Found!";
            return empty;
        }
        return null;
    }


    //FORMAT FOR GUI
    public static String ChangersGUI(String PageKey){
        try {
            JSONArray Change = getRecentChange(PageKey);
            ArrayList<String> UserList = new ArrayList<>();
            for (int i = 0; i <= 3; i++){
                int order = i + 1;
                JSONObject UserOBJ = (JSONObject) Change.get(i);
                String UserChange = order + "." + UserOBJ.get("user") + ": " + UserOBJ.get("timestamp") + "\n";
                UserList.add(UserChange);
                if (i == 3){
                    return String.valueOf(UserList);
                }
            }

        }  catch (Exception e) {
                String empty = "Wikipedia Page was not Found!";
                return empty;
        }
        return null;
    }

    //TESTING
    public boolean TestUserFirst(String PageKey) {
        try {
            JSONArray Change = getRecentChange(PageKey);
            JSONObject UserOBJ = (JSONObject) Change.get(2);
            String TheUser = (String) UserOBJ.get("user");
            if (TheUser.equals("Notreallydavid")) {
                return true;
            } else {
                return false;
            }
        } catch (Exception e) {
            return false;
        }

    }

    public boolean TestUserSecond(String PageKey) {
        try {
            JSONArray Change = getRecentChange(PageKey);
            JSONObject UserOBJ = (JSONObject) Change.get(2);
            String TheUser = (String) UserOBJ.get("timestamp");
            if (TheUser.equals("2025-10-26T05:56:53Z")) {
                return true;
            } else {
                return false;
            }
        } catch (Exception e) {
            return false;
        }

    }


    }




